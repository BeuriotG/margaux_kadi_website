---
import { Image } from "astro:assets";
import mic from "../assets/images/mic.png"

---

<section
  class="w-full h-full pt-24 text-5xl md:text-6xl bg-amber-100 flex flex-col items-center justify-start gap-8 md:gap-12"
>
  <h2 class="capitalize text-red-600">Témoignages</h2>
  <div class="flex flex-col items-center w-xl">
    <Image
      src={mic}
      width={250}
      height={250}
      alt="Image stylisé d'un microphone"
      class="object-cover"
    />
    <div class="border-2 border-red-600 flex justify-center items-center ovale">
      <p class="text-center text-red-600"><i>["témoignages d'élèves"]</i></p>
    </div>
  </div>
</section>

<style>
  .ovale {
    width: 480px;
    height: 300px;
    -webkit-border-radius: 240px / 150px;
    -moz-border-radius: 240px / 150px;
    border-radius: 240px / 150px;
  }
</style>
