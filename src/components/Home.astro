---
import { Image } from "astro:assets";
import portrait from "../assets/images/Margaux_Kadi_portrait.jpg"
import facebook from "../assets/icons/Facebook_Logo_Primary.png"
import instagram from "../assets/icons/Instagram_Glyph_Gradient.png"
import logo from "../assets/icons/Site Web Logo.png"
import TCM from "../assets/icons/TCM.jpg"
import NavLinks from "./navlinks.astro";

---

<section class="flex flex-col justify-start gap-0 md:gap-2 min-h-screen w-full mx-auto p-5 relative">
  <header class="flex justify-center md:justify-evenly items-center h-1/5 ">
    <Image src={logo}  alt="Logo signature Margaux Kadi" class="h-auto w-full max-w-52 md:max-w-64"/>
    <NavLinks title="Qui je suis" link="#qui_je_suis"/>
    <NavLinks title="Les cours de chant" link="#les_cours_de_chant"/>
    <NavLinks title="Sur scÃ¨ne" link="#sur_scene"/>
    <NavLinks title="Contact" link="#contact"/>
    
    
    <div class="flex justify-center items-start gap-3">
      <a href="https://www.instagram.com/margauxkadilaurenson/?hl=fr"
      target="_blank"
        ><Image
          src={instagram}
          width={60}
          height={60}
          alt="logo instagram"
        /></a
      >
      <a href=""
      target="_blank"
        ><Image
          src={facebook}
          width={60}
          height={60}
          alt="logo facebook"
        /></a
      >
    </div>
  </header>

  <article class="flex flex-col md:flex-row md:justify-end items-center gap-2 h-full md:p-5">
    <Image src={portrait} alt="Portrait de Margaux Kadi" class="img-rounded h-auto max-w-1/2 md:max-w-1/3 m-auto"/>

    <div class="flex flex-col justify-center items-end h-full w-full md:h-auto md:w-2xl m-auto me-2 p-3 z-10">
      <h3 class="capitalize text-home-page text-outline-red">
        <i>Margaux Kadi</i>
      </h3>
      <h3 class="uppercase text-home-page text-outline-pink" >
        Coach vocale & professeure de technique vocale
      </h3>
    </div>
  </article>
  <Image src={TCM} alt={"Certification professionnelle Le Chanteur Moderne"} class="mx-auto h-auto max-w-1/2 md:h-auto md:w-1/3 md:absolute md:bottom-1 md:right-1 z-0"/>
</section>






