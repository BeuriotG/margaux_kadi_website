---
import { Image } from "astro:assets";
import portrait from '../assets/images/Margaux_Kadi_portrait.jpg'
import facebook from "../assets/icons/Facebook_Logo_Primary.png"
import instagram from "../assets/icons/Instagram_Glyph_Gradient.png"

import NavLinks from "./navlinks.astro";

---

<section class="h-full w-full p-5 flex flex-col justify-start gap-5 md:gap-2">
  <header class="md:flex md:justify-evenly items-center h-1/5 ">
    <NavLinks title="Qui je suis" link="#qui_je_suis"/>
    <NavLinks title="Les cours de chant" link="#les_cours_de_chant"/>
    <NavLinks title="Sur scÃ¨ne" link="#sur_scene"/>
    <NavLinks title="Contact" link="#contact"/>
    
    
    <div class="flex justify-center items-start gap-3">
      <a href="https://www.instagram.com/margauxkadilaurenson/?hl=fr"
      target="_blank"
        ><Image
          src={instagram}
          width={60}
          height={60}
          alt="logo instagram"
        /></a
      >
      <a href=""
      target="_blank"
        ><Image
          src={facebook}
          width={60}
          height={60}
          alt="logo facebook"
        /></a
      >
    </div>
  </header>

  <article class="flex flex-col md:flex-row md:justify-center p-5 h-full ">
    <Image src={portrait} alt="Portrait de Margaux Kadi" class="rounded-4xl object-cover" />

    <div class="h-full w-full md:w-2xl p-3 flex flex-col justify-center">
      <h3 class="capitalize text-4xl md:text-6xl text-end font-bold shadowy_red">
        <i>MargauxKadi</i>
      </h3>
      <h3 class="uppercase text-4xl md:text-6xl text-end font-bold shadowy_pink" >
        Coach vocale & professeure de technique vocale
      </h3>
    </div>
  </article>
</section>

<style>
  .shadowy_red {
    color: transparent;
    -webkit-text-stroke: 2px red;
  }
  .shadowy_pink {
    color: rgb(177, 116, 180);
    -webkit-text-stroke: 3px rgb(125, 77, 128);
  }
  
</style>






